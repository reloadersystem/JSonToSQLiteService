<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="1dp"
    android:background="#FFF"
    android:clickable="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/txt_codigodb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:hint="codigo" />

        <ImageView
            android:id="@+id/imagendb"
            android:layout_width="110dp"
            android:layout_height="99dp"
            android:layout_alignTop="@+id/txt_codigodb"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ambiente_1" />

        <EditText
            android:id="@+id/txt_capitulodb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_codigodb"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="16dp"
            android:hint="capitulo" />

        <EditText
            android:id="@+id/txt_deshabilitardb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_capitulodb"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="238dp"
            android:hint="deshabilitado"
            app:layout_constraintTop_toBottomOf="@+id/txt_urlpdfdb"
            tools:layout_editor_absoluteX="251dp" />

        <EditText
            android:id="@+id/txt_urlpdfdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_asiganturadb"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"
            android:hint="url pdf" />


        <EditText
            android:id="@+id/txt_ssdpdfdb"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_below="@+id/txt_deshabilitardb"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:hint="ssd pdf" />

        <EditText
            android:id="@+id/txt_asiganturadb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/txt_ssdpdfdb"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="258dp"
            android:hint="asignatura"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_capitulodb" /><![CDATA[


        >

    ]]>
    </RelativeLayout>







</android.support.v7.widget.CardView>